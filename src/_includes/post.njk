---
layout: "base.njk"
---

<h1> {{ title }} </h1>
<p><i>Published on: <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time></i></p>
    {% for tag in tags %}
       <a href="/posts/tag/{{ tag | slugify }}">#{{ tag }}</a>
    {% endfor %}
</br>
{{ content | safe }}
</br>
<hr></hr>

	{% if prevPost.url %}
		<p>
			<strong>Previous</strong>:
			<a href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
        {% if nextPost.url %}
        | 
			<strong>Next</strong>:
			<a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
		</p>
	{% endif %}
	{% endif %}